@model Course

@{
    ViewData["Title"] = "Create";
}

@*
ToDO
add warning about deleteing all assignments and list them under *@

<div class="row mt-4 text">
    <div class="col-md-8 offset-3">
        <h1>Delete Course</h1>
        <div class="row">
            <div class="col-8">
                <form method="post" asp-action="DeletePOST" asp-controller="Course">
                    <input asp-for="ID" hidden />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <div class="form-group">
                            <label class="float-start">Course</label>
                            <input class="form-control" asp-for="CourseName" disabled/>
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" value="Delete" class="btn btn-danger float-end"/>
                            <a class="btn btn-secondary float-start" asp-controller="Course" asp-action="Index">Show All</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


